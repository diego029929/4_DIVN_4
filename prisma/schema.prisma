datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

////////////////////
// ENUMS
////////////////////

enum Role {
  USER
  ADMIN
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}

////////////////////
// MODELS
////////////////////

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  username   String   @unique
  firstName  String?
  lastName   String?
  password   String
  isVerified Boolean  @default(false)

  // üîê ADMIN & S√âCURIT√â
  role       Role     @default(USER)
  isBlocked  Boolean  @default(false)
  deletedAt  DateTime?

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  carts               Cart[]
  orders              Order[]
  verificationTokens  VerificationToken[]
  passwordResetTokens PasswordResetToken[]
  profile             Profile?

  // üßæ BACK-OFFICE
  payments   Payment[]
  errorLogs  ErrorLog[]
  adminLogs  AdminLog[] @relation("AdminActions")

  @@map("users")
}

model Profile {
  id          String   @id @default(cuid())
  userId      String   @unique
  firstName   String?
  lastName    String?
  address     String?
  phoneNumber String?
  user        User     @relation(fields: [userId], references: [id])

  @@map("profiles")
}

model VerificationToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([token, userId])
  @@map("verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires   DateTime
  createdAt DateTime @default(now())

  @@map("password_reset_tokens")
}

////////////////////
// PRODUITS / PANIER
////////////////////

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  imageUrl    String?
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cartItems  CartItem[]
  orderItems OrderItem[]

  @@map("products")
}

model Cart {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("carts")
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([cartId, productId])
  @@map("cart_items")
}

////////////////////
// COMMANDES
////////////////////

model Order {
  id        String      @id @default(cuid())
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  total     Float
  status    OrderStatus @default(PENDING)
  items     OrderItem[]

  // Stripe
  stripeSessionId String?

  payments  Payment[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int      @default(1)
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([orderId, productId])
  @@map("order_items")
}

////////////////////
// üí≥ PAIEMENTS
////////////////////

model Payment {
  id          String   @id @default(cuid())
  userId      String
  orderId     String?
  provider    String   // stripe
  externalId  String   // payment_intent / session_id
  amount      Float
  currency    String
  status      String   // succeeded / failed / refunded

  user        User     @relation(fields: [userId], references: [id])
  order       Order?   @relation(fields: [orderId], references: [id])

  createdAt   DateTime @default(now())
}

////////////////////
// üö® LOGS & ADMIN
////////////////////

model ErrorLog {
  id        String   @id @default(cuid())
  userId    String?
  message   String
  stack     String?
  url       String?

  user      User?    @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
}

model AdminLog {
  id           String   @id @default(cuid())
  adminId      String
  action       String   // BLOCK_USER, UNBLOCK_USER, IMPERSONATE, DELETE_USER
  targetUserId String?

  admin        User     @relation("AdminActions", fields: [adminId], references: [id])

  createdAt    DateTime @default(now())
}
