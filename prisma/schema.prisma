model Product {
  id          String       @id @default(cuid())
  name        String
  description String
  price       Float
  image       String
  cartItems   CartItem[]   // ✅ Ajout du lien inverse
  orderItems  OrderItem[]  // ✅ Ajout du lien inverse
}

model CartItem {
  id        String   @id @default(cuid())
  cartId    String
  productId String
  quantity  Int
  cart      Cart     @relation(fields: [cartId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  order     Order    @relation(fields: [orderId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}
